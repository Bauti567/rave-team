---
import { actions } from "astro:actions";
---

<section class="text-white grid grid-cols-2">
  <form
    action={actions.send}
    method="POST"
    class="flex flex-col gap-4 max-w-[450px]"
  >
    <label
      class="py-3 px-4 shadow-[4px_2px_0_rgba(250,250,250,1)] border-1 border-color-cs-gray"
    >
      <input
        placeholder="Introduce your name"
        name="name"
        class="outline-none placeholder:text-[#E1E1E1]"
      />
    </label>
    <label
      class="py-3 px-4 shadow-[4px_2px_0_rgba(250,250,250,1)] border-1 border-color-cs-gray"
    >
      <input
        required
        name="to"
        placeholder="Introduce your email*"
        class="outline-none placeholder:text-[#E1E1E1]"
      />
    </label>
    <label
      class="py-3 px-4 shadow-[4px_2px_0_rgba(250,250,250,1)] border-1 border-color-cs-gray"
    >
      <textarea
        name="message"
        placeholder="Drop your message here, like it's hot ðŸ”¥"
        class="outline-none w-full min-h-[50px] max-h-[150px] placeholder:text-[#E1E1E1]"
      ></textarea>
    </label>
    <button class="w-full h-[46px] font-luckiest-guy">Send Message</button>
  </form>
  <article>
    <h2 class="text-subtitle font-luckiest-guy">Want to invest?</h2>
  </article>
</section>
