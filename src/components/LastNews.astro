---
import Link from "./Link.astro";
import NewsCard from "./NewsCard.astro";
import { news } from "../data/news.ts";
---

<section class="flex flex-col gap-14 pt-[72px] pb-14 text-white">
  <h2 class="text-6xl font-luckiest-guy self-center">LATEST NEWS</h2>
  <div class="flex flex-col gap-14">
    {
      news.slice(0, 3).map((item) => {
        return (
          <NewsCard
            key={item}
            title={item.title}
            description={item.description}
            link={item.link}
            image={item.image}
          />
        );
      })
    }
  </div>
  <Link
    to="/last-news"
    class="bg-white px-[50px] py-4 text-primary font-luckiest-guy self-center text-xl hover:shadow-[3px_3px_0_rgba(0,0,0,1)] transition duration-150 ease-in-out hover:translate-[8px] shadow-[10px_10px_0_rgba(0,0,0,1)]"
  >
    VIEW ALL
  </Link>
</section>
