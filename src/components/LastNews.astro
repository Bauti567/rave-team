---
import Link from "./Link.astro";
import NewsCard from "./NewsCard.astro";
import { news } from "../data/news.ts";
---

<section class="flex flex-col gap-14 pt-[72px] bg-primary text-white">
  <h2 class="text-6xl font-luckiest-guy self-center">LATEST NEWS</h2>
  <div class="flex flex-col">
    {
      news.map((item) => {
        return (
          <NewsCard
            key={item}
            title={item.title}
            description={item.description}
            link={item.link}
            align={item.align}
          />
        );
      })
    }
  </div>
  <Link external to="/"> VIEW ALL </Link>
</section>
