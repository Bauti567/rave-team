---
import Link from "./Link.astro";
import ArrowRight from "./ui/ArrowRight.astro";
const { title, description, link, align = "end" } = Astro.props;
const containerAlignClass = align === "end" ? "place-items-end" : "self-end";
const angleAlignClass = align === "end" ? "right-diagonal" : "left-diagonal";
---

<div
  class={`flex flex-col gap-4 bg-white text-primary py-[26px] px-[100px] shadow-[0_0_0_3px_rgba(0,0,0,1)] w-3/5 ${containerAlignClass} ${angleAlignClass} right-diagonal`}
>
  <h3 class="font-luckiest-guy text-2xl">{title}</h3>
  <p class="text-xl max-w-[696px]">
    {description}
  </p>
  <Link
    external
    to={link}
    class="group text-base font-bold flex gap-2 items-center place-content-center w-fit"
  >
    <span
      class="relative after:absolute after:bottom-0 after:left-0 after:w-0 after:border-b-2 after:border-black after:border-dotted after:transition-all after:duration-300 after:ease-in-out after:content-[''] group-hover:after:w-full"
    >
      Read more
    </span>
    <ArrowRight />
  </Link>
</div>
<style>
  .right-diagonal {
    clip-path: polygon(0 0, 100% 0, 95% 100%, 0 100%);
  }
  .left-diagonal {
    clip-path: polygon(5% 0, 100% 0, 100% 100%, 0 100%);
  }
</style>
