---
import Download from "./ui/Download.astro";
---

<section class="text-white flex flex-col justify-end h-[480px]">
  <h2 class="text-6xl font-luckiest-guy ml-[54px] mb-12">
    JOIN OUR NEWSLETTER
  </h2>
  <form class="flex gap-4 ml-[54px]">
    <input
      type="email"
      name="suscribe"
      id="suscribe"
      placeholder="Introduce your email"
      class="border border-white px-[15px] py-3 w-[641px] placeholder:text-[#E1E1E1] font-semibold text-xl bg-[#3B2F45] input-search"
    />
    <button
      type="submit"
      class="bg-white px-[50px] py-4 text-primary font-luckiest-guy self-center text-xl transition duration-150 ease-in-out input-button cursor-pointer"
      >SUSCRIBE</button
    >
  </form>
  <div
    class="flex h-[200px] bg-secondary background-diagonal px-[54px] pb-7 items-end justify-end"
  >
    <button
      class="font-luckiest-guy text-4xl border-4 border-white px-5 py-3 flex gap-4 items-center justify-center cursor-pointer transition duration-150 ease-in-out input-button"
    >
      <Download />
      PRESS KIT
    </button>
  </div>
</section>
<style>
  .input-search:focus {
    transform: translateZ(20px) translateX(-5px) translateY(-5px);
    box-shadow: 5px 5px 0 0 #ededed;
  }
  .input-button:hover {
    transform: translateZ(10px) translateX(-5px) translateY(-5px);
    box-shadow: 5px 5px 0 0 #ededed;
  }
</style>
