---
import Icon from '../Icon.astro'

interface Props {
  class?: string
  width?: number
  height?: number
}

const { class: extraClass, height = 24, width = 24 } = Astro.props
---

<Icon
  {width}
  {height}
  name="arrow-icon"
  class:list={['lucide lucide-arrow-right-icon lucide-arrow-right transform transition-transform duration-150 ease-in-out group-hover:translate-x-2', extraClass]}
/>
